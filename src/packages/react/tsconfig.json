{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "./temp/tsc/types",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "importHelpers": false,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "paths": {
      "cotton-box": [
        "../core/src",
      ],
    },
    "outDir": "./temp/tsc/js",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "stripInternal": true,
    "target": "ES2020",
  },
  "exclude": [
    "node_modules",
    "./src/**/*.draft*",
    "./src/**/*.old*",
  ],
  "include": [
    "./src",
    "./custom.d.ts",
  ],
}